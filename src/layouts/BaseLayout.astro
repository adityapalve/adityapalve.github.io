---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Aditya Palve's personal website" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <nav>
      <a href="/">home</a> • 
      <a href="/writing">writing</a> • 
      <a href="/bookshelf">bookshelf</a> • 
      <a href="/footpaths">footpaths</a> • 
      <a href="/contact">contact</a>
    </nav>
  </body>
</html>

<style is:global>
  :root {
    --font-body: 'Georgia', 'Times New Roman', serif;
    --font-mono: 'SF Mono', 'Menlo', monospace;
    --color-bg: #fafafa;
    --color-text: #1a1a1a;
    --color-muted: #666;
    --color-link: #0066cc;
    --color-link-hover: #004499;
    --max-width: 640px;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --color-bg: #111;
      --color-text: #e0e0e0;
      --color-muted: #888;
      --color-link: #6db3f2;
      --color-link-hover: #a8d4ff;
    }
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-size: 18px;
    line-height: 1.6;
  }

  body {
    font-family: var(--font-body);
    background-color: var(--color-bg);
    color: var(--color-text);
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1.5rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  nav {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-muted);
    text-align: center;
    font-size: 0.9rem;
  }

  nav a {
    color: var(--color-muted);
    text-decoration: none;
  }

  nav a:hover {
    color: var(--color-text);
  }

  a {
    color: var(--color-link);
    text-decoration: none;
  }

  a:hover {
    color: var(--color-link-hover);
    text-decoration: underline;
  }

  h1 {
    font-size: 1.8rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  h2 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  p {
    margin-bottom: 1rem;
  }

  ul, ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  code {
    font-family: var(--font-mono);
    font-size: 0.85em;
    background: rgba(128, 128, 128, 0.1);
    padding: 0.2em 0.4em;
    border-radius: 3px;
  }

  hr {
    border: none;
    border-top: 1px solid var(--color-muted);
    margin: 2rem 0;
  }

  .muted {
    color: var(--color-muted);
  }

  .small {
    font-size: 0.85rem;
  }
</style>
